<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewMerchantBranch"
    android:layout_gravity="center"
    android:layout_width="@dimen/merchant_branch_item"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/corner_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small">

        <TextView
            android:id="@+id/txtMerchantBranchName"
            android:layout_width="@dimen/empty_size"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtMerchantBranchAddress"
            android:layout_width="@dimen/empty_size"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            android:lines="3"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtMerchantBranchName"
            app:layout_constraintTop_toBottomOf="@+id/txtMerchantBranchName"/>

        <TextView
            android:id="@+id/txtMerchantBranchStoreHoursAndNumber"
            android:layout_width="@dimen/empty_size"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtMerchantBranchAddress"
            app:layout_constraintTop_toBottomOf="@+id/txtMerchantBranchAddress"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
